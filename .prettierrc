{
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "bracketSpacing": true,
  "proseWrap": "always",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["*.yml", "*.yaml", ".prettierrc", "*.md", "*.json"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
